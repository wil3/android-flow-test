<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medGray" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medGray"
    tools:context=".MainActivity">

    <!--
   <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/smokeyTeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
-->
    <TableLayout
        android:id="@+id/main_table"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true">
    <TableRow
        android:id="@+id/send_btn_row"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Send JSON" />
    </TableRow>
    <TableRow
        android:id="@+id/send_textView_row"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="5dp" >
    <TextView
        android:id="@+id/send_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:id="@+id/receive_btn_row"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/receive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Receive JSON"
            android:layout_centerHorizontal="true" />
    </TableRow>
    <TableRow
        android:id="@+id/receive_textView_row"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="5dp" >
        <TextView
            android:id="@+id/receive_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Clear"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
</ScrollView>